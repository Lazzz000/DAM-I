<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Nexus"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu centro de hardware extremo"
            android:textColor="#A0A0A0"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBanner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#1F1F1F"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="#2C2C2C"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFERTAS\nDE VERANO"
                android:textColor="#03DAC5"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="20dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvMisionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuestra Misión"
            android:textColor="#03DAC5"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBanner" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1F1F1F"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvMisionTitle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Democratizar el acceso al hardware de alto rendimiento en Perú, ofreciendo componentes de vanguardia con asesoría experta y precios competitivos para gamers y creadores."
                android:textColor="#E0E0E0"
                android:lineSpacingExtra="4dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvVisionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuestra Visión"
            android:textColor="#03DAC5"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardMision" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1F1F1F"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvVisionTitle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Convertirnos en el referente número uno de tecnología en Latinoamérica, reconocidos por nuestra innovación, soporte técnico especializado y compromiso con la comunidad gamer."
                android:textColor="#E0E0E0"
                android:lineSpacingExtra="4dp"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>